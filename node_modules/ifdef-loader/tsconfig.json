{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "lib": ["es5", "es6", "es2018"],
        "forceConsistentCasingInFileNames": false,
        "noFallthroughCasesInSwitch": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "declaration": false,
        "types": [
           "node"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}